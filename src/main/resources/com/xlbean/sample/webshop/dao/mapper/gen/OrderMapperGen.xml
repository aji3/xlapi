<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xlbean.sample.webshop.dao.mapper.gen.OrderMapperGen">

    <resultMap id="BaseResultMap" type="com.xlbean.sample.webshop.entity.Order">
        <result column="orderId" property="orderId" />
        <result column="customerId" property="customerId" />
        <result column="orderDatetime" property="orderDatetime" />
        <result column="totalPrice" property="totalPrice" />
    </resultMap>

    <sql id="Base_Column_List">
        orderId, customerId, orderDatetime, totalPrice  
    </sql>

    <select id="selectOne" resultMap="BaseResultMap">
        select
        orderId, customerId, orderDatetime, totalPrice  
        from `WebShop`.`Order` 
        where
            orderId = #{orderId} 
    </select>

    <select id="selectList" resultMap="BaseResultMap">
        select
        orderId, customerId, orderDatetime, totalPrice  
        from `WebShop`.`Order` 
        where
            1 = 1
 
    </select>

    <delete id="delete">
        delete from `WebShop`.`Order` 
        where
            orderId = #{orderId} 
    </delete>
  
    <insert id="insert" parameterType="com.xlbean.sample.webshop.entity.Order">
        insert into `WebShop`.`Order` (
            orderId, 
            customerId, 
            orderDatetime, 
            totalPrice 
        ) values (
            #{record.orderId}, 
            #{record.customerId}, 
            #{record.orderDatetime}, 
            #{record.totalPrice} 
        )
    </insert>

    <update id="update" parameterType="com.xlbean.sample.webshop.entity.Order">
        update `WebShop`.`Order` 
        <set>
            orderId = #{record.orderId}, 
            customerId = #{record.customerId}, 
            orderDatetime = #{record.orderDatetime}, 
            totalPrice = #{record.totalPrice} 
        </set>
        where
             orderId = #{record.orderId} 
    </update>
    
    <update id="updateSelective" parameterType="com.xlbean.sample.webshop.entity.Order">
        update `WebShop`.`Order` 
        <set>
            <if test="record.orderId != null">orderId = #{record.orderId},</if>
            <if test="record.customerId != null">customerId = #{record.customerId},</if>
            <if test="record.orderDatetime != null">orderDatetime = #{record.orderDatetime},</if>
            <if test="record.totalPrice != null">totalPrice = #{record.totalPrice}</if>
        </set>
        where
             orderId = #{record.orderId} 
    </update>

    <select id="generateOrderId" resultType="int">
        select ifnull(max(orderId) + 1,1) from `WebShop`.`Order` 
    </select>


</mapper>
